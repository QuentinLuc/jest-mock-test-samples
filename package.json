{
    "name": "jest-sample",
    "private": true,
    "author": {
        "name": "Quentin Luc",
        "url": "https://www.linkedin.com/in/quentin-luc-15161994/"
    },
    "scripts": {
        "prebuild": "rm -rf ./dist && yarn run lint",
        "build": "tsc -p tsconfig.json",
        "test": "node_modules/.bin/jest",
        "test:heap": "node --inspect-brk --expose-gc node_modules/.bin/jest --runInBand --logHeapUsage",
        "test:coverage": "node_modules/.bin/jest --forceExit --coverage",
        "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand --no-cache",
        "lint": "eslint .",
        "lint:fix": "eslint --fix .",
        "clean": "rm -rf ./node_modules",
        "start": "node dist/src/main.js"
    },
    "devDependencies": {
        "@babel/core": "^7.15.0",
        "@babel/preset-env": "^7.15.0",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.15.0",
        "@types/enzyme": "^3.10.7",
        "@types/jest": "^27.0.1",
        "@types/react": "^17.0.19",
        "@types/react-dom": "^17.0.8",
        "@types/react-router-dom": "^5.1.8",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "css-loader": "^6.0.2",
        "enzyme": "^3.11.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-react": "^7.26.0",
        "eslint-plugin-standard": "^5.0.0",
        "jest": "^27.0.6",
        "jest-transform-stub": "^2.0.0",
        "style-loader": "^3.2.1",
        "ts-jest": "^27.0.5",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.2"
    }
}
